<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/16"  stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.assignment.carassignment.controller.CarDetailsController" prefHeight="200.0" prefWidth="460.0" >
    <VBox alignment="CENTER" fx:id="carDetailsContainer">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label text="Car Details" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10.0" />
            </padding>
            <Label fx:id="makeLabel"/>
        </HBox >
        <HBox alignment="CENTER">
        <Label fx:id="modelLabel"/>
        </HBox>
        <HBox alignment="CENTER">
        <Label fx:id="classLabel"/>
        </HBox >
        <HBox alignment="CENTER">
        <Label fx:id="yearLabel"/>
        </HBox>
        <HBox alignment="CENTER">
        <Label fx:id="cityMpgLabel"/>
        </HBox>
        <HBox alignment="CENTER">
         <Label fx:id="highwayMpgLabel"/>
        </HBox>
        <HBox alignment="CENTER">
         <Label fx:id="combinedMpgLabel"/>
        </HBox>
        <HBox alignment="CENTER">
         <Label fx:id="cylindersLabel"/>
        </HBox>
        <HBox alignment="CENTER">
         <Label fx:id="displacementLabel"/>
        </HBox>
        <HBox alignment="CENTER">
         <Label fx:id="driveLabel"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="fuelTypeLabel"/>
        </HBox>
        <HBox alignment="CENTER">
            <Label fx:id="transmissionLabel"/>
        </HBox>
    </VBox>
    <HBox alignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button text="Back" onAction="#handleBackButton"/>
    </HBox>
</VBox>
